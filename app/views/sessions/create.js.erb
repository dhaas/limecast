<% if logged_in? %>
  { success: true, html: '<%= link_to_profile current_user %>' }
<% elsif params[:user][:login].blank? -%>
  { success: false, html: '<p>Please type your username</p>' } 
<% elsif params[:user][:password].blank? -%>
  { success: false, html: '<p>Please type your password</p>' } 
<% else -%>
  { success: false, html: '<p>Email and password don\'t match. <%= link_to %{I forgot my password}, forgot_password_url -%></p>' } 
<% end -%>
