<div class="reviews">
  <h3>Reviews</h3>

  <p>
    <%= link_to "Positive (#{podcast.comments.that_are_positive.count})", "" %>
    <%= link_to "Negative (#{podcast.comments.that_are_negative.count})", "" %>
    <%= link_to "All (#{podcast.comments.count})", "" %>
  </p>

  <ul class="reviews">
    <%= render :partial => 'comments/comment', :collection => comments -%>
  </ul>

  <% unless comments.empty? -%>
    <%= link_to "All #{comments.size} reviews", reviews_url(:podcast => podcast), :class => 'all_reviews' -%>
  <% end -%>

  <% if can_add_comments?(podcast.episodes.newest.first) %>
    <%= render :partial => 'comments/add_comment', :object => podcast -%>
  <% end %>

  <% reset_cycle('row_class') %>
</div>
