<% commentable = add_comment -%>
<% options ||= {} -%>

<h3>Write a review</h3>

<% if current_user -%>
<% remote_form_for(:comment, :update => 'comments_list', :position => :bottom, :url => comments_url) do |f| -%>
  <div class="field">
  <%= f.label :title -%>
    <div>
      <%= f.text_field :title, :class => 'text' -%>
    </div>
  </div>

  <div class="field">
    <%= f.label :body, "Review" -%>
    <div>
      <%= f.text_area :body, :class => "text#{ ' full' if options[:width] == 'full' }", :rows => '10' -%>
    </div>
  </div>

  <%= f.hidden_field :commentable_id, :value => commentable.id -%>
  <%= f.hidden_field :commentable_type, :value => commentable.class.to_s -%>

  <div class="align">
    <%= f.radio_button :positive, true, :checked => "checked" -%>
    <%= f.label :positive, "Thumbs Up" -%>
    <%= f.radio_button :positive, false -%>
    <%= f.label :positive, "Thumbs Down" -%>
  </div>

  <div class="controls">
    <%= submit_tag "Add", :class => 'button' -%>
  </div>
<% end -%>
<% else -%>
  <span><%= link_to "Login", login_url -%></span> or
  <span><%= link_to "Signup", signup_url -%></span>
  to post reviews.
<% end -%>
