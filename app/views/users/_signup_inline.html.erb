<% remote_form_for :user, :url => session_url do |f| -%>
  <%= f.label :email -%>
  <%= f.text_field :email, :style => 'width: 10em;' -%>
  
  <%= f.label :password -%>
  <%= f.password_field :password, :style => 'width: 10em;' -%>

  <%= link_to "I forgot", reset_password_url -%>

  <%= submit_tag "Signup" -%>
<% end -%>
