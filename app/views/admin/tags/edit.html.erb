<h1>Editing tag</h1>

<% form_for(@tag, :url => admin_tag_url(@tag)) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.check_box :special -%> <%= f.label :special, "Shown in menu" -%>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Back', admin_tags_path %>
