<% episode = download -%>

<div class="download">
  <% link_to episode.source.url, :class => 'icon' do -%>
    <span>Download</span> 
    <% if episode.source.size -%>
      (<%= FileSize.new(episode.source.size).to_s -%>)
    <% end -%>
  <% end -%>
</div>

<div class="limewire">
  <%= link_to "<span>Magnet</span>", episode.source.magnet_url, :title => "Open the download with the LimeWire client so that it can use P2P to speed up the transfer" -%>
</div>
