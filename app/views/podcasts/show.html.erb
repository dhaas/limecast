<h1><%=h @podcast.title %></h1>

<div class="podcast-thumbnail" style="float: left; margin: 0px 20px 20px 0px;">
  <%= image_tag(@podcast.logo.url(:small), :class => 'reflect rheight30 ropacity15') -%>
</div>

<div class="user"><%=h @podcast.user.login -%></div>
<div class="site"><%=link_to @podcast.site, h(@podcast.site) %></div>

<div class="subscribe">
  <%= link_to "Subscribe", @podcast.feed %>
</div>

<div style="clear: both;"></div>

<h2>Podcast Description</h2>
<div class="description">
  <%= @podcast.description -%>
</div>

<h2>Reviews</h2>
<div class="comments">
  <%= render :partial => 'comments/comments', :object => @podcast -%>
  <%= render :partial => 'comments/add_comment', :object => @podcast -%>
</div>

<h2>Episodes</h2>
<ul>
<% @podcast.episodes.each do |episode| -%>
  <li><%= link_to (episode.title or "untitled"), episode_url(episode) -%></li>
<% end -%>
</ul>

<% if @podcast.writable_by?(current_user) -%>
  <%= link_to 'Edit', edit_podcast_path(@podcast) %> |
<% end -%>

<%= link_to 'Back', podcasts_path %>
